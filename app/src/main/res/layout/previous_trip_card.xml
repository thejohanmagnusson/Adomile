<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_previous_trip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_edge_margin"
    android:layout_marginLeft="@dimen/card_edge_margin"
    android:layout_marginRight="@dimen/card_edge_margin"
    android:layout_marginStart="@dimen/card_edge_margin"
    android:layout_marginEnd="@dimen/card_edge_margin"
    android:layout_marginBottom="@dimen/card_edge_margin"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="24sp"
            android:text="@string/previous_trip"/>

        <include layout="@layout/trip_list_item"/>

    </LinearLayout>
</android.support.v7.widget.CardView>